<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Document</title>
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
			crossorigin="anonymous"
		/>
		<link rel="stylesheet" href="/secret.css" />
	</head>

	<body>
		<div class="container d-flex" id="navbar">
			<h1>Welcome <%=username%></h1>
			<form action="/user/logout" method="POST">
				<button class="btn btn-danger">LogOut</button>
			</form>
		</div>
		<section class="d-flex">
			<%courses.map(course=>{%>
			<div class="course">
				<h3><%=course.title%></h3>
				<ul class="course-content">
					<li><strong>About</strong> <%=course.about%></li>
					<li><strong>Author</strong> <%=course.author%></li>
					<li><strong>Duration</strong> <%=course.duration%></li>
					<%if(course.access==='true'){%>
					<a href="/courses/<%=course.title%>" class="btn btn-primary"
						>Open Course</a
					>
					<%}%>
				</ul>
			</div>
			<%})%>
		</section>
	</body>
</html>
